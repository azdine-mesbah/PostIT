<%- include('./includes/header')%>

<% if(posts.length){ %>
<% posts.forEach(function(post){ %>
<a href="/posts/<%= post._id %>" class="list-group-item list-group-item-action">
  <img class="avatar-tiny" src="<%= post.author.avatar%>">
  <strong><%= post.title %></strong>
  <%= post.createdAt.getDay() %>/<%= post.createdAt.getMonth()+1 %>/<%= post.createdAt.getFullYear() %>
</a>
<% }) %>
<% }else{ %>
<h2>Hello <strong><%= currentUser.username %></strong>, your feed is empty.</h2>
<p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have
  any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find
  content written by people with similar interests and then follow them.</p>
<% } %>
<%- include('./includes/footer')%>