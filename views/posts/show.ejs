<%- include('../includes/header')%>


<div class="d-flex justify-content-between">
    <h2><%= title %></h2>
    <% if(currentUser && author.username == currentUser.username){%>
    <span class="pt-2">
        <a href="/posts/edit/<%=_id%>" class="text-primary mr-2" data-toggle="tooltip" data-placement="top"
            title="Edit"><i class="fas fa-edit"></i></a>
        <form id='delete-post' class="delete-post-form d-inline" action="/posts/delete/<%=_id%>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="delete-post-button text-danger" data-toggle="tooltip" data-placement="top" title="Delete"><i
                    class="fas fa-trash"></i></button>
        </form>
    </span>
    <%}%>
    </div>

    <p class="text-muted small mb-4">
      <a href="/users/profile/<%= author.username %>"><img class="avatar-tiny" src="<%= author.avatar %>"></a>
    Posted by <a href="/users/profile/<%= author.username %>"><%= author.username %></a>
    <%= createdAt.getDay() %>/<%= createdAt.getMonth()+1 %>/<%= createdAt.getFullYear() %></p>

    <div class="body-content">
        <p><%=body%></p>
    </div>

    <%- include('../includes/footer')%>